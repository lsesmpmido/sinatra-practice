<form action="/quicknote/<%= params[:id] %>" method="post">
  <div class="menu-bar">
    <input type="hidden" name="_method" value="patch">
    <input type="submit" value="保存" class="btn btn-primary">
    <button type="button" onclick="location.href='/quicknote/<%= params[:id] %>'" class="btn btn-secondary">キャンセル</button>
  </div>
  <div class="sticky-note full">
    <input type="text" name="title" value="<%= @title %>" class="form-control form-title">
    <textarea name="content" class="form-control form-content"><%= @content %></textarea>
  </div>
</form>
